

<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'users/info', user: @user %>

      <%= render 'books/list', book: @Book %>

      </div>

    <div class="col-xs-9">
      <h1>Users</h1>
      <table class="table">
        <thead>
  	      <tr>
            <th>image</th>
  	          <th>neme</th>
            <th></th>
  	      </tr>
        </thead>

  <tbody>
  	<% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg",:size =>'30x30' %></td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user %></td>

      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>




