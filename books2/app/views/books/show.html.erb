

<div class="container">
  <div class="row">

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <div class="col-xs-3">
      <%= render 'users/info', user: @user %>
      <%= render 'books/list', book: @Book %>
    </div>


    <div class="col-xs-9">
<h3>Books detail</h3>

<table class="table">

  <tbody>
    <tr>
  	<td><p><%= attachment_image_tag @user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg", :size =>'30x30' %></p>
      <%= link_to @user.name, user_path(@user.id) %></td>



    <td><p class="post-title"><%= @book.title %></p></td>
    <td><p class="post-body"><%= @book.body %></p></td>


    <% if @user == current_user %>
      <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success btn-xs" %></td>
      <td><%= link_to "Destroy", @book, method: :delete, data: { confirm: 'Are you sure?' }, class: "pull-denger", class: "btn btn-danger btn-xs" %></td>
    </tr>
    <% end %>

  </tbody>
 </table>
</div>

</div>
</div>


