

<div class="container">
  <div class="row">

<h1>Editing Book</h1>

  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>error prohibited this obj from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
            <% end %>
        </ul>
    </div>
  <% end %>

<%= form_for(@book) do |f| %>
    <h5>Title</h5>
    <%= f.text_field :title, :size => "100%" %>
    <h5>Opinion</h5>
    <%= f.text_area :body, :size => "100%" %>
    <%= f.submit 'Update book', :class => 'btn btn-primary btn-block' %>
<% end %>

<table class="table">
  <tr>
  <%= link_to 'Show', book_path %>
  <%= link_to 'Back', books_path %>
  </tr>
</table>

</div>
</div>

