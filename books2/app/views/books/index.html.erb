

<div class="container">
  <div class="row">

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

  <% if @Book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @Book.errors.count %>error prohibited this obj from being saved:</h2>
        <ul>
          <% @Book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
            <% end %>
        </ul>
    </div>
  <% end %>

    <div class="col-xs-3">
      <%= render 'users/info', user: @user %>

      <%= render 'books/list', book: @Book %>

    </div>

    <div class="col-xs-9">
      <h2>Books</h2>

<table class="table">
  <thead>
  	<tr>
      <th></th>
  	  <th>Title</th>
  	  <th>Opinion</th>
  	</tr>
  </thead>

<tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg", :size =>'30x30' %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>

      </tr>
    <% end %>
  </tbody>
</table>
</div>

</div>
</div>


