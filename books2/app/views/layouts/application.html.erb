<!DOCTYPE html>
<html>
  <head>
    <title>Books2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

<header>
<nav class="navbar navbar-inverse">

<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <h3><p class="text-light">Bookers</p></h3>
    </div>

    <div class="col-xs-6">
        <% if user_signed_in? %>
        <ul class="list-inline">
          <li><%= link_to sanitize('<i class="glyphicon glyphicon-home"></i> ') + ' Home', user_path(current_user) %>
            </li>
          <li><%= link_to sanitize('<i class="glyphicon glyphicon-user"></i> ') + ' Users', users_path %>
          </li>
          <li><%= link_to sanitize('<i class="glyphicon glyphicon-book"></i> ') + ' Books', books_path %>
            </li>
          <li><%= link_to sanitize('<i class="glyphicon glyphicon-log-out"></i> ') + ' logout', destroy_user_session_path, method: :delete %>
          </li></ul>
        <% else %>
          <ul class="list-inline">
          <li><%= link_to sanitize('<i class="glyphicon glyphicon-home"></i> ') + ' Home', homes_top_path %>
            </li>
          <li><%= link_to sanitize('<i class="glyphicon glyphicon-link"></i> ') + ' About', homes_about_path %>
            </li>
          <li><%= link_to sanitize('<i class="glyphicon glyphicon-edit"></i> ') + ' sign up', new_user_registration_path %>
            </li>
          <li><%= link_to sanitize('<i class="glyphicon glyphicon-log-in"></i> ') + ' login', user_session_path %>
          </li></ul>
        <% end %>

      </nav>
    </div>

  </div>
</div>
</header>
  <%= yield %>

  </body>
</html>
